<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".Pdf_Activity" >

    <include
        android:id="@+id/update_pdf_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/select_pdf_image"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/update_pdf_page_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Pdf"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/insert_pdf"
        android:background="@color/whiteBackground" />

    <EditText
        android:id="@+id/pdf_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_pdf_image"
        android:layout_marginTop="40dp"
        android:background="@drawable/inputs"
        android:textColor="@color/black"
        android:ems="10"
        android:padding="15dp"
        android:gravity="start|top"
        android:hint="Clicca sull'immagine per aggiungere il tuo Pdf, poi aggiungi un titolo qui"
        android:textColorHint="@color/colorProfile"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/update_pdf_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pdf_title"
        android:layout_marginTop="70dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="Carica Pdf"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryDark" />

</RelativeLayout>