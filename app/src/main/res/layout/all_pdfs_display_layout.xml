<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_pdf_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/mainBackground" >

    <ImageView
        android:id="@+id/personalimagePdf"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="10dp"
        android:src="@drawable/select_pdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/personal_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titolo pdf"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/personale_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Cognome"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like"
                android:contentDescription="Like"
                android:background="@color/mainBackground" />

            <TextView
                android:id="@+id/personal_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 Mi Piace"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>